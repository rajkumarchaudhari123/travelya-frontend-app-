{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "nativewind",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "nativewind/types",
      "react", 
      "react-native"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "lib": ["ES2017", "DOM", "ESNext"],
    "target": "ES2017",
    "module": "ES2015"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx", 
    "**/*.d.ts",
    "nativewind-env.d.ts",
    "index.js"
  ],
  "exclude": [
    "node_modules"
  ]
}